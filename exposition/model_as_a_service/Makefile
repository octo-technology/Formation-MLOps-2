SHELL := /bin/bash
.SHELLFLAGS = -ec
.ONESHELL:
.SILENT:

.PHONY: help
help:
	echo "â“ Utiliser \`make <target>' oÃ¹ <target> peut Ãªtre"
	grep -E '^\.PHONY: [a-zA-Z0-9_-]+ .*?## .*$$' $(MAKEFILE_LIST) | \
		awk 'BEGIN {FS = "(: |##)"}; {printf "\033[36m%-30s\033[0m %s\n", $$2, $$3}'

.PHONY: inference-service  ## ğŸ lancer le service d'infÃ©rence
inference-service:
	FLASK_APP=inference.py python -m flask run --host='0.0.0.0'

.PHONY: docker-build-inference-service  ## ğŸ³ pour builder l'image docker du service d'infÃ©rence (Flask)
docker-build-inference-service:
	docker build -f dockerfile-inference-service -t inference-service:v1 .

.PHONY: docker-inference-service  ## ğŸ³ pour lancer le service d'infÃ©rence dans docker
docker-inference-service:
	docker run --rm -p 5000:5000 --name inference-service -it inference-service:v1

.PHONY: app  ## ğŸ lancer l'application de dashboarding (app streamlit)
app:
	streamlit run app.py --server.port 8092

.PHONY: docker-build-app  ## ğŸ³ pour builder l'image docker de l'application de dashboarding (app streamlit)
docker-build-app:
	docker build -f dockerfile-app -t app:v1 .

.PHONY: docker-app  ## ğŸ³ pour lancer l'application de dashboard (app streamlit)
docker-app:
	docker run --rm -p 8092:8092 --name app -it app:v1
